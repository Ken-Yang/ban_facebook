{
    "manifest_version":2,
    "name": "Ban Facebook",
    "description": "Help you resist Facebook",
    "version": "1.0.4",
    "icons": { "16": "image/icon16.png",
           "48": "image/icon48.png",
          "128": "image/icon128.png" },
    "permissions": [
        "alarms",
        "tabs",
        "storage",
        "webRequest", 
        "webRequestBlocking",
        "*://*.facebook.com/*"
    ],
    "background": {
        "scripts": ["bg.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "image/icon16.png",
        "default_popup": "popup.html"
    }    
}
